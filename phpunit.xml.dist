<?xml version="1.0" encoding="UTF-8"?>
<phpunit
		 bootstrap="tests/TestBase.php"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 stopOnFailure="false"
		 syntaxCheck="true"
		>

	<filter>
		<whitelist>
			<directory>src/CarbonExt/NBD</directory>
		</whitelist>
	</filter>

	<testsuites>
		<testsuite name="Carbon Next Business Day (BBD) Test Suite">
			<directory>tests</directory>
		</testsuite>
	</testsuites>
</phpunit>